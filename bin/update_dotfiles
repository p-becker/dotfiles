#!/bin/bash -ex
# Adapted from https://github.com/majesticuser/dotfiles/blob/master/update_stuff.sh
cd "$(dirname "$0")/.."
git pull --recurse-submodules
git submodule update --recursive --remote
#update_ruby_version
#gem update --system
#yes y | gem update
#yes n | gem clean
brew update
brew upgrade
brew cask upgrade
brew cleanup
nvim -c PlugUpdate -c quitall

cd $(dirname "$0")
update_alacritty
